<div class="container">
<h1>- New Game -</h1>
  <div class="letter">
      <%@random_letters.each do |letter|%>
      <div class="letter_box"><span>
      <%= letter %>
      </span></div>
      <%end%>
  </div>
  <form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :random_letters, @random_letters %>
    <label>Enter your longest word:</label>
    <input type="text" name="word" placeholder="E.g." id="word">
    <input class="btn" type="submit" value="Done!">
  </form>
</div>

